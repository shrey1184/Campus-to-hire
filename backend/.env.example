# Campus-to-Hire Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration (Neon PostgreSQL)
# =============================================================================
# Format: postgresql://user:password@host:port/database
# For async: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/campus_to_hire

# =============================================================================
# JWT Authentication
# =============================================================================
# Generate a secure random string for JWT_SECRET
# You can use: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256

# =============================================================================
# AWS Configuration (for Bedrock AI)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# =============================================================================
# Amazon Bedrock Model Configuration
# =============================================================================
# Default: Amazon Nova Lite (AWS first-party, no 3rd-party billing)
BEDROCK_MODEL_ID=amazon.nova-lite-v1:0

# Other AWS first-party options:
# BEDROCK_MODEL_ID=amazon.nova-micro-v1:0   # Cheapest, text-only
# BEDROCK_MODEL_ID=amazon.nova-pro-v1:0     # Best quality
# BEDROCK_MODEL_ID=amazon.titan-text-express-v1  # Older generation

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins (either JSON array OR comma-separated list)
# JSON example: ["http://localhost:3000","http://localhost:5173"]
# CSV example: http://localhost:3000,http://localhost:5173,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# =============================================================================
# Optional: API Configuration
# =============================================================================
# API_PREFIX=/api

# =============================================================================
# Rate Limiting
# =============================================================================
# Requests allowed per client in rolling 60s window
RATE_LIMIT_REQUESTS_PER_MINUTE=300
# Burst requests allowed per client in rolling 10s window
RATE_LIMIT_BURST_SIZE=100

# Optional local convenience (default false)
# Set true only if you want tables auto-created on startup without Alembic.
AUTO_CREATE_TABLES=false

# =============================================================================
# Google OAuth Configuration
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
# 1. Create a new OAuth 2.0 Client ID
# 2. Set Authorized redirect URIs to: http://localhost:3000/auth/callback/google
#    (and your production URL when deploying)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback/google
